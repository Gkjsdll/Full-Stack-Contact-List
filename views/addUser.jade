extends layout

block links
  link(rel="stylesheet" href="/stylesheets/addUser.css")

block content
  div.col-xs-10.col-xs-offset-1#newContactForm
    form
    div.row.col-xs-offset-2
        input.col-xs-2#firstName(type="text" placeholder="First Name")
        input.col-xs-2#lastname(type="text" placeholder="Last Name")
        input.col-xs-2#phone(type="text" placeholder="Phone #")
        input.col-xs-3#address(type="text" placeholder="Street Address")
        input.col-xs-3#email(type="text" placeholder="E-Mail")
        button.col-xs-12 Add Contact
  script(type="text/javascript" src="javascripts/addUser.js")
